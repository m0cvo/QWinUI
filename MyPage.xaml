<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="QWinUI.MyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MyPage">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <CalendarView Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="ExitBtn" Background="LightBlue" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20" Click="ExitBtn_Click">Exit</Button>
        <Button x:Name="NextPage" Background="LightBlue" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20" Click="NextPage_Click">Next Page</Button>
    </Grid>
</Window>
